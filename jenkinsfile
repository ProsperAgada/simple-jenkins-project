pipeline {
    agent any
    tools {
       maven 'Maven' 
    }
    stages {
        stage ("Build Stage"){
            steps {
                echo "Building the Application..."
                sh "mvn clean package"

            }
        }

        stage ("Test Stage"){
            steps {
                echo "Testing the Application..."

            }
        }

        stage ("Deploy Stage"){
            steps {
                echo "Deploying the Application..."

            }
        }

    }
}