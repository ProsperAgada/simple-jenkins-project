pipeline {
    agent any
    tools {
       maven 'Maven' 
    }
    stages {
        stage ("Build Stage"){
            steps {
                echo "Building application into .jar..."
                sh "mvn clean package"
            }
        }

        stage ("Packing Stage"){
            steps {
                echo "Packaging application into Dockerfile..."
                sh "docker build -t simple_jave/project:0.1 ."

            }
        }

        stage ("Deploy Stage"){
            steps {
                echo "Deploying the Application..."

            }
        }

    }
}